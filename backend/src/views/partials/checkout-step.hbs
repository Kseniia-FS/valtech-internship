<div class="checkout dn" >
  <div class="checkout__item">
    <span>1</span>
    <p>Shopping Cart</p>
  </div>
  <div  class="checkout__item">
    <span>2</span>
    <p>Checkout</p>
  </div>
  <div  class="checkout__item no-active">
    <span>3</span>
    <p>Completed</p>
  </div>
</div>

<div class="checkout">
  <div class="checkout__buyer">
    <p class="checkout__title">Buyer Info</p>
    <form action="" class="checkout__buyer-form">
      <label for="name">Full Name

      </label><input type="text" id="userName" />
      <label for="address">Address

      </label>
      <input type="text" id="address" />
      <label for="phone">Contact

      </label>
      <input type="phone" id="phone" />
      <label for="city">City

      </label><input type="text" id="city" />
      <div class="checkout__wrap">
        <div class="checkout__wrap-m">
          <label for="state">State</label>
          <select name="" id="state" class="select">
            <option value="Select State">Select State</option>
            <option value="Kansas">Kansas</option>
            <option value="Kentucky">Kentucky</option>
            <option value="Maryland">Maryland</option>
            <option value="New-Mexico">New Mexico</option>
            <option value="Massachusetts">Massachusetts</option>
            <option value="New-Hampshire">New Hampshire</option>
          </select>
        </div>
        <div class="checkout__wrap-m">
          <label for="zip">Zip Code
          </label>
          <input type="text" id="zip" />
        </div>
      </div>
    </form>
  </div>
  <div>
    <p class="checkout__title">Payment Method</p>
    <div class="checkout__btns">
      <button>
        {{> svg-credit}}Credit Card</button>
      <button>
        {{> svg-transfer}}Bank Transfer</button>
      <button>
        {{> svg-paypal}}Paypal</button>
    </div>
    <form action="" class="checkout__buyer-form">
      <label for="cardName">Name on Card</label>
      <input type="text" id="cardName"  />

      <div class="checkout__wrap">
       <div class="checkout__wrap-m" style="width: 78%;">
            <label for="cardNumber">Card Number</label>
        <input type="text" id="cardNumber"  />
       </div>
        <div class="checkout__wrap-m">
            <label for="cvv">CVV</label>
        <input type="text" id="cvv" />
        </div>
      </div>
      <div class="checkout__wrap" style="margin-bottom: 75px;">
        <div class="checkout__wrap-m" style="width: 50%;">
            <label for="month">Month</label>
          <select name="" id="month" aria-placeholder="Select Month">
            <option value="Select Month">Select Month</option>
            <option value="January">January</option>
            <option value="March">March</option>
            <option value="July">July</option>
            <option value="September">September</option>
            <option value="November">November</option>
            <option value="December">December</option>
          </select>
        </div>
       <div class="checkout__wrap-m" style="width: 50%;">
            <label for="year">Year</label>
          <select name="" id="year" aria-placeholder="Select Year">
            <option value="Select Month">Select Month</option>
            <option value="2021">2021</option>
            <option value="2022">2022</option>
            <option value="2023">2023</option>
            <option value="2024">2024</option>
            <option value="2025">2025</option>
            <option value="2026">2026</option>
          </select>
       </div>
      </div>
      <a href="/completed" class="checkout-btn" id="ckeckoutBtn">Checkout</a>
    </form>
  </div>
</div>