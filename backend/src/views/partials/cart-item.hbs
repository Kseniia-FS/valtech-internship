
{{#each this}}
<li class="cart__table-body">
          <div class="cart__table-data first-data" ><a id="productId" href="/product?productID={{id}}"><img class="cart__table-img" src={{imgUrl}} /></a><p>{{title}}</p></div>
          <div id="quantityBtn" class="cart__table-data  cart__table-data--quantity">
             
          <button class="product__card--btn plus" type="button" name="button" id="plus">
  <svg
    version="1.1"
    xmlns="http://www.w3.org/2000/svg"
    width="16"
    height="16"
    viewBox="0 0 32 32"
  >
    <path
      d="M31 12h-11v-11c0-0.552-0.448-1-1-1h-6c-0.552 0-1 0.448-1 1v11h-11c-0.552 0-1 0.448-1 1v6c0 0.552 0.448 1 1 1h11v11c0 0.552 0.448 1 1 1h6c0.552 0 1-0.448 1-1v-11h11c0.552 0 1-0.448 1-1v-6c0-0.552-0.448-1-1-1z"
    ></path>
  </svg>
</button>
<span  id="quantity" class="product__card--input">{{#if quantity}}{{quantity}}{{else}}1{{/if}}</span>
<button class="product__card--btn minus" type="button" name="button" id="minus">
  <svg
    version="1.1"
    xmlns="http://www.w3.org/2000/svg"
    width="16"
    height="16"
    viewBox="0 0 32 32"
  >
    <path
      d="M0 13v6c0 0.552 0.448 1 1 1h30c0.552 0 1-0.448 1-1v-6c0-0.552-0.448-1-1-1h-30c-0.552 0-1 0.448-1 1z"
    ></path>
  </svg>
</button>
       
         </div>
          <div id="productPrice" class="cart__table-data ">${{price}}</div>
          <div id="itemSum" class="cart__table-data ">${{total}}</div>
