<!DOCTYPE html>
<html lang="en">

{{> head}}

<body>
    <!-- HEADER     -->
  {{> header}}
    <!-- HERO -->
    <section class="container-shop hero-container">
        <div class="hero">
            <h1 class="hero__title">Summer Sale</h1>
            <p class="hero__subtitle">50% Off</p>
            <p class="hero__text">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. </p>
            <a href="/products?page=1&limit=16&category=all" class="button hero-btn">Shop Now</a>
        </div>
        <div id="slider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100 img-slider" src="./img4.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 img-slider" src="./img4.jpg" alt="Second slide">
                </div>
             </div>
            <a class="carousel-control-prev" href="#slider" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#slider" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>
    <!-- CATEGORIES     -->
    <section class="container-shop categories">
        <div class="categories__title--help">
            <h2 class="categories__title">Categories</h2>
            <div class="pseudo-wrap"> <a href="/products?page=1&limit=16&category=all" class="categories__link">View all</a></div>
        </div>
        <ul class="categories__list">
            <li class="categories__item" name="jacket  id="category"">
                <a href="/products?page=1&limit=16&category=jacket" class="categories__item--link" >
                   {{> svg-jacket}}
                    <p class="categories__item--title">Jacket</p>
                </a>
            </li>
            <li class="categories__item" name="shirt"  id="category">
                <a class="categories__item--link" href="/products?page=1&limit=16&category=shirt">
                   {{> svg-shirt}}
                    <span class="categories__item--title">Shirt</span>
                </a>
            </li>
            <li class="categories__item" name="pants"  id="category">
                <a class="categories__item--link" href="/products?page=1&limit=16&category=pants">
                    {{> svg-pants}}
                    <span class="categories__item--title">Pants</span>
                </a>
            </li>
            <li class="categories__item" name="shoes"  id="category">
                <a class="categories__item--link" href="/products?page=1&limit=16&category=shoes">
                   {{> svg-shoes}}
                    <span class="categories__item--title">Shoes</span>
                </a>
            </li>
            <li class="categories__item" name="dress"  id="category">
                <a class="categories__item--link" href="/products?page=1&limit=16&category=dress">
                   {{> svg-dress}}
                    <span class="categories__item--title">Dress</span>
                </a>
            </li>
            <li class="categories__item" name="acces"  id="category">
                <a class="categories__item--link" href="/products?page=1&limit=16&category=acces">
                    {{> svg-acces}}
                    <span class="categories__item--title">Acces</span>
                </a>
            </li>
        </ul>

    </section>
    <!-- NEW ARRIVALS     -->
    <section class="container-shop">
        <div class="categories__title--help">
            <h2 class="categories__title">New Arrivals</h2>
            <div class="pseudo-wrap"> <a href="/new-arrivals?page=1&limit=16" class="categories__link">View all</a></div>
        </div>

        <div class="arrivals">
            <div class="arrivals__product">
                <img src="./img1.jpg" alt="product" class="arrivals__product--img">
                <div class="arrivals__prodact-info">
                    <h3 class="arrivals__product--title">Awesome watch</h3>
                    <div class="arrivals__product--price"><span id="currencySymbol">EUR</span><span id="changedPrice" data-value="299">299</span></div>
                    {{!-- <button type="button" class="button cart-btn" id="addBtn">Add to Cart</button> --}}
                </div>
            </div>
            <ul class="arrivals__list">
                <li class="arrivals__item">
                    <img src="./img5.jpeg" alt="product-photo" class="arrivals__item-img">
                    <h3 class="arrivals__item-title">Watch</h3>
                    <div class="arrivals__item--price"><span id="currencySymbol">EUR</span><span id="changedPrice" data-value="299">299</span></div>
                </li>
                <li class="arrivals__item">
                    <img src="./img5.jpeg" alt="product-photo" class="arrivals__item-img">
                    <h3 class="arrivals__item-title">Denim Watch</h3>
                    <div class="arrivals__item--price"><span id="currencySymbol">EUR</span><span id="changedPrice" data-value="299">299</span></div>
                </li>
                <li class="arrivals__item">
                    <img src="./img5.jpeg" alt="product-photo" class="arrivals__item-img">
                    <h3 class="arrivals__item-title">Black Watch</h3>
                    <div class="arrivals__item--price"><span id="currencySymbol">EUR</span><span id="changedPrice" data-value="299">299</span></div>
                </li>
                <li class="arrivals__item">
                    <img src="./img5.jpeg" alt="product-photo" class="arrivals__item-img">
                    <h3 class="arrivals__item-title">Watch</h3>
                    <div class="arrivals__item--price"><span id="currencySymbol">EUR</span><span id="changedPrice" data-value="299">299</span></div>
                </li>
            </ul>
        </div>
    </section>
    <!-- FEATURED     -->
    <section class="container-shop featured">
        <div class="categories__title--help">
            <h2 class="categories__title">Featured</h2>
            <div class="pseudo-wrap"> <a href="/products?page=1&limit=16&category=all" class="categories__link">View all</a></div>
        </div>
        <ul class="featured__list">
            {{> product-thumb}}
                  </ul>
    </section>
    <!-- SUMMER COLLECTION     -->
    <section class="container-shop summer-collection" style="padding-top: 45px; background-color:#393D46 ; height: 426px;">
        <div style="position: relative;">
            <h2 class="collections__title">Summer Collections</h2>
            <ul class="owl-carousel collections__list">
                <li class="collections__item">
                    <h3 class="collections__item--title">Summer <br/>
                        <span>Collection</span>
                    </h3>
                </li>
                <li class="collections__item">
                    <h3 class="collections__item--title">Casual<br/>
                        <span>Collection</span>
                    </h3>
                </li>
                <li class="collections__item">
                    <h3 class="collections__item--title">Big Vibe<br/>
                        <span>Collection</span>
                    </h3>
                </li>
            </ul>
        </div>
    </section>
    <!-- POPULAR     -->
    <section class="container-shop popular">
        <div class="categories__title--help">
            <h2 class="categories__title">Popular This Week</h2>
            <div class="pseudo-wrap"> <a href="/new-arrivals?page=1&limit=8" class="categories__link">View all</a></div>
        </div>
        <ul class="popular__list">
            {{#each products}}
            <li class="popular__item">
               <a href="/product?productID={{this._id}}" class="popular__item-img"> <img src="{{this.image}}" alt="product-photo" class="popular__item-img"></a>
                <div>
                    <h3 class="popular__item-title">{{this.title}}</h3>
                    <div class="featured__item--price"><span id="currencySymbol">â‚¬</span><span id="changedPrice" data-value={{this.price}}>{{this.price}}</span></div>
                    <div class="rating-mini">
                        <span class="active"></span>
                        <span class="active"></span>
                        <span class="active"></span>
                        <span class="active"></span>
                        <span class="active"></span>
                    </div>
                </div>
            </li>
             {{/each }}
        </ul>
    </section>
    <!-- ADVANTAGES     -->
    <section  class="container-shop advantages">
        <h2 class="categories__title advantages__title">Why Choose Us</h2>
        <ul class="advantages__list">
            <li class="advantages__item">
                {{> svg-delivery}}
                <h3>Free Delivery</h3>
                <p>This free shipping <br/> only for selected region</p>
            </li>
            <li class="advantages__item">
               {{> svg-pay}}
                <h3>Payment Method</h3>
                <p>This free shipping <br/> only for selected region</p>
            </li>
            <li class="advantages__item">
                {{> svg-warranty}}
                <h3>Warranty</h3>
                <p>This free shipping <br/> only for selected region</p>
            </li>
            <li class="advantages__item">
                {{> svg-support}}
                <h3>Customer Support </h3>
                <p>This free shipping <br/> only for selected region</p>
            </li>
        </ul>
    </section>
    <!-- OUR CLIENTS     -->
    <section class="container-shop clients">
        <ul class="clients__list">
            <li class="clients__item">
                {{> svg-client1}}
            </li>
            <li class="clients__item">
                {{> svg-client2}}
            </li>
            <li class="clients__item">
                {{> svg-client3}}
            </li>
            <li class="clients__item">
               {{> svg-client4}}
            </li>
        </ul>
    </section>
    <!-- FOOTER     -->
   {{> footer}}
    <!-- Mobile-header -->
   {{> mobile-menu}}

    <!-- Modal -->
   {{> modal}}

   <script src="dist/mobileMenu.js"></script>
   <script src="dist/addToCartFromThumbs.js"></script>
   <script src="dist/modal.js"></script>
   <script src="dist/register.js"></script>
    <script src="dist/favorite.js"></script>
   <script src="dist/compare.js"></script>
   <script src="dist/currency.js"></script>


