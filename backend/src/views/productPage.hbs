<!DOCTYPE html>
<html lang="en">
{{> head}}
<body>
      <!-- HEADER     -->
  {{> header}}
  {{!-- Product Card --}}
  <section class="container-shop product__page">
      <div class="product__card">
         
<div id="product-slider" class="carousel slide product__card-slider" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
     
    <div class="carousel-item active">
      <img class="d-block w-100 h-523 " src={{product.image}} alt={{product.title}}>
    </div>
   {{#each product.images}}
    <div class="carousel-item">
      <img class="d-block w-100 h-523" src={{this}} alt={{product.title}}>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 h-523" src={{this}} alt={{product.title}}>
    </div>  {{/each}}
  </div>
  <a class="carousel-control-prev" href="#product-slider" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#product-slider" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
      <div>
          
          <h2 class="product__card--title">{{product.title}}</h2>
          <div class="product__card--price"><span>$</span><span>{{product.price}}
          </span></div>
          <p class="product__card--descr">{{product.descr}}</p>
          <div class="product__card--quantity">
              <p class="product__card--q">Quantity</p>
              
                    <button class="product__card--btn plus" type="button" name="button" id="plus">
                    <svg version="1.1" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 32 32">
                         <path d="M31 12h-11v-11c0-0.552-0.448-1-1-1h-6c-0.552 0-1 0.448-1 1v11h-11c-0.552 0-1 0.448-1 1v6c0 0.552 0.448 1 1 1h11v11c0 0.552 0.448 1 1 1h6c0.552 0 1-0.448 1-1v-11h11c0.552 0 1-0.448 1-1v-6c0-0.552-0.448-1-1-1z"></path>
                    </svg>
                </button>
                <input type="text" value="1" id="input" class="product__card--input" />
                <button class="product__card--btn minus" type="button" name="button" id="minus">
                    <svg version="1.1" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 32 32">
                     <path d="M0 13v6c0 0.552 0.448 1 1 1h30c0.552 0 1-0.448 1-1v-6c0-0.552-0.448-1-1-1h-30c-0.552 0-1 0.448-1 1z"></path>
                     </svg>
                </button>
               
           </div>
            <button type="button" class="button cart-btn ">Add to Cart</button>
      </div>
      </div>
  </section>
  <section class="container-shop product__page">
   
   <div class="categories__title--help">
            <h2 class="categories__title">Similiar Product</h2>
            <div class="pseudo-wrap"> <a href="" class="categories__link">View all</a></div>
        </div>
  {{> product-thumbs}}
  </section>
  {{> footer}}

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>